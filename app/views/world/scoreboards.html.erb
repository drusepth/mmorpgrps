<h1>Highest level (alive)</h1>
<table width="600px" border=1>
	<tr>
		<th>Level</th>
		<th>Faction</th>
		<th>Player</th>
		<th>Age</th>
		<th>Health remaining</th>
	</tr>
	<% Soul.where(alive: true).order('level DESC, age DESC').limit(10).each do |soul| %>
	<tr>
		<td>L<%= soul.level %></td>
		<td><%= soul.role %></td>
		<td><%= soul.player.name %></td>
		<td><%= soul.age %></td>
		<td><%= soul.health %> HP</td>
	</tr>
	<% end %>
</table>

